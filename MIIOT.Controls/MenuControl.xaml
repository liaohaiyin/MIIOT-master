<UserControl x:Class="MIIOT.Controls.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MIIOT.Controls"
             mc:Ignorable="d" >
    <Border x:Name="bor" Tag="5" Background="White" MouseLeftButtonDown="borMenu_Click"  BorderBrush="LightGray"  Cursor="Hand" >
        <StackPanel x:Name="stk" Orientation="Horizontal" HorizontalAlignment="Center" Margin="30 50" >
            <Image  x:Name="img" Visibility="Visible" Width="30" Margin="5 0"></Image>
            <TextBlock x:Name="txt" Grid.Column="1" VerticalAlignment="Center" FontSize="20" Foreground="{StaticResource PrimaryForegroudBrush}" Text="{Binding MenuText}"></TextBlock>
        </StackPanel>
    </Border>
</UserControl>
